<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:background="@color/grey_1000"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/txt_nama"
                app:layout_constraintStart_toEndOf="@+id/txt_nama"
                app:layout_constraintTop_toTopOf="@+id/txt_nama"></LinearLayout>

            <TextView
                android:id="@+id/txt_nopol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/opensansbold"
                android:text="BH XXXX BM"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/txt_nama" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/blue_900"
                android:padding="2dp"
                android:text="LUNAS"
                android:textColor="@color/putih"
                app:layout_constraintBottom_toBottomOf="@+id/txt_total_bersih"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_total_bersih" />

            <TextView
                android:id="@+id/txt_total_bersih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"

                android:fontFamily="@font/opensansbold"
                android:text="Rp. 800.000"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_berat"
                app:layout_constraintTop_toBottomOf="@+id/txt_berat" />

            <TextView
                android:id="@+id/txt_berat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/opensansregular"
                android:text="12.000"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@+id/txt_nama"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama" />

            <TextView
                android:id="@+id/txt_tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="KTB"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/grey_1000"
                app:layout_constraintEnd_toEndOf="@+id/txt_tgl"
                app:layout_constraintTop_toBottomOf="@+id/txt_tgl" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensansbold"
                android:text="Yadi"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/opensansregular"
                android:text="12 Nov 2021"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/opensansregular"
                android:text="X"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_berat"
                app:layout_constraintStart_toEndOf="@+id/txt_berat"
                app:layout_constraintTop_toTopOf="@+id/txt_berat" />

            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/opensansregular"
                android:text="115"

                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/txt"
                app:layout_constraintStart_toEndOf="@+id/txt"
                app:layout_constraintTop_toTopOf="@+id/txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>